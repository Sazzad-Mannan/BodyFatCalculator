<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp"/>

        <!-- Percentage -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.2%"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FD6B22"
            android:layout_marginBottom="4dp"/>

        <!-- Level -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/l3"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Chart Rows -->
        <!-- Row 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"

                android:gravity="center_vertical">

                <!-- Color Bar -->
                <View
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_fd6b22"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#FD6B22"/>

                <!-- Label -->
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l1"
                    android:textSize="16sp"

                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d1"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_fd6b22"
                    android:backgroundTint="#e0e1e3"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l2"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d2"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/imageView7"
                    android:layout_width="5dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_fd6b22"
                    android:backgroundTint="#91bf77"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l3"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d3"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_fd6b22"
                    android:backgroundTint="#62c924"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l4"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d4"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:backgroundTint="#feac2e"
                    android:background="@drawable/bar_fd6b22"

                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l5"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d5"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 6 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_fd6b22"
                    android:backgroundTint="#fc1424"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/l6"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/d6"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:background="@drawable/desc_box"
                    android:padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
