<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_50"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="@string/body"
                    android:textColor="@color/purple_700"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- HEIGHT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextNumberDecimal3"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_input"
                        android:hint="Enter height"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:background="@drawable/spinner_modern" />
                </LinearLayout>

                <!-- WEIGHT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextNumberDecimal5"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_input"
                        android:hint="Enter weight"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/spinner_modern" />
                </LinearLayout>

                <!-- WAIST -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Waist"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextNumberDecimal6"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_input"
                        android:hint="Enter waist size"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/spinner_modern" />
                </LinearLayout>

                <!-- NECK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textViewNeck"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Neck"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextNeck"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_input"
                        android:hint="Enter neck size"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinnerNeck"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/spinner_modern" />
                </LinearLayout>

                <!-- HIP -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textViewHip"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Hip"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextHip"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_input"
                        android:hint="Enter hip size"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinnerHip"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/spinner_modern" />
                </LinearLayout>

                <!-- GENDER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                        android:checked="true"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:layout_marginStart="16dp"
                            android:textSize="13sp" />
                    </RadioGroup>
                </LinearLayout>

                <!-- Button -->
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="Calculate"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:paddingVertical="12dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Help text -->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:onClick="how"
                    android:text="How it works?"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/gim"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
